<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ict.finalpj.domain.mycamp.mapper.MyFavCampMapper">

	<!-- 찜한 캠핑장 상세 정보 -->
    <select id="getFavCampList" resultType="CampVO">
        SELECT *
    FROM pjcamp
    WHERE campIdx IN (SELECT campIdx FROM pjfavcamp WHERE userIdx = #{userIdx} order by campFavorIdx desc) 
    
    </select>

   

</mapper>